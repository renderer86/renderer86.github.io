<div id="post-nav">
    {% if page.next.url %}
    <div id="previous-post">
        <p class="post_nav_p">{{ site.data.language.str_previous_post | default: "Previous post" }}</p>
        <a class="post_nav_a" alt="{{ page.next.title }}" href="{{ page.next.url | relative_url | default: 'none' }}">
            {{ page.next.title }}
        </a>
    </div>
    {% endif %}

    {% if page.previous.url %}
    <div id="next-post">
        <p class="post_nav_p">{{ site.data.language.str_next_post | default: "Next post"}}</p>
        <a class="post_nav_a" alt="{{ page.previous.title }}" href="{{ page.previous.url | relative_url | default: 'none' }}">
            {{ page.previous.title }}
        </a>
    </div>
    {% endif %}
</div>
